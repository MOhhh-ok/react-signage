{
    "extends": "@tsconfig/node20/tsconfig.json",
    "compilerOptions": {
        "declaration": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "jsx": "react-jsx",
        "types": [
            "react",
            "jest"
        ],
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "module": "ESNext",
        "moduleResolution": "bundler"
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx"
    ]
}