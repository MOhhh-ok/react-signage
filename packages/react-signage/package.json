{
    "name": "@masa-dev/react-signage",
    "version": "1.0.0",
    "description": "This is a react library for signage.",
    "keywords": [
        "react",
        "signage",
        "video",
        "image"
    ],
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "type": "module",
    "publishConfig": {
        "access": "public"
    },
    "files": [
        "dist"
    ],
    "scripts": {
        "test": "echo \"Error: no test specified\" && exit 1",
        "build": "tsc && pnpm run copy",
        "dev": "tsc --watch & pnpm run copy:watch",
        "copy": "cpx \"src/**/*.css\" dist",
        "copy:watch": "cpx \"src/**/*.css\" dist --watch",
        "prepublishOnly": "pnpm run build && pnpm run copy"
    },
    "author": "masa-dev",
    "license": "MIT",
    "dependencies": {
        "swiper": "^11.1.14"
    },
    "peerDependencies": {
        "react": "^18.3.1",
        "react-dom": "^18.3.1"
    },
    "devDependencies": {
        "@tsconfig/node20": "^20.1.4",
        "@types/react": "^18.3.12",
        "cpx": "^1.5.0"
    }
}