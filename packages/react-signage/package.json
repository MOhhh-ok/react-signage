{
    "name": "@masa-dev/react-signage",
    "version": "2.3.0",
    "description": "This is a react library for signage.",
    "keywords": [
        "react",
        "signage",
        "video",
        "image"
    ],
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js"
        },
        "./preloader": {
            "types": "./dist/Preloader/index.d.ts",
            "import": "./dist/Preloader/index.js"
        },
        "./lite": {
            "types": "./dist/LiteSignage/index.d.ts",
            "import": "./dist/LiteSignage/index.js"
        }
    },
    "type": "module",
    "publishConfig": {
        "access": "public"
    },
    "files": [
        "dist"
    ],
    "scripts": {
        "test": "jest",
        "build": "tsc && pnpm run copy",
        "dev": "tsc --watch & pnpm run copy:watch",
        "copy": "cpx \"src/**/*.css\" dist",
        "copy:watch": "cpx \"src/**/*.css\" dist --watch",
        "prepublishOnly": "pnpm run build && pnpm run copy"
    },
    "author": "masa-dev",
    "license": "MIT",
    "dependencies": {
        "@react-spring/web": "^9.7.5",
        "react-hot-toast": "^2.4.1"
    },
    "peerDependencies": {
        "react": "^18.3.1",
        "react-dom": "^18.3.1"
    },
    "devDependencies": {
        "@tsconfig/node20": "^20.1.4",
        "@types/jest": "^29.5.14",
        "@types/react": "^18.3.12",
        "cpx": "^1.5.0",
        "jest": "^29.7.0",
        "ts-jest": "^29.2.5"
    }
}